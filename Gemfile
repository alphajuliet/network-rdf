# Gemfile

source "http://rubygems.org/"

# General
gem "rake"
gem "rspec"
gem "configuration"

# RDF and data
gem "rdf", "1.0.7"
gem "rdf-turtle"
gem "rdf-json"
gem "vcard", :git => "https://github.com/qoobaa/vcard.git"
gem "linkedin", "0.3.7"

# Back end RDF store
gem 'dydra', :git => 'git://github.com/dydra/dydra.git'
gem 'agraph'

# SPARQL
gem "rest-client"
gem "sparql-client"
gem "terminal-table"

# Web front end
gem "sinatra"
gem "markaby"
gem "thin"
gem "rack-test"
